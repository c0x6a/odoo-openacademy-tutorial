[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=space
indent_size=4

[*.py]
indent_style=space
indent_size=4
max_line_lenght=119

[{*.sht,*.html,*.shtm,*.shtml,*.ng,*.htm,*.xml}]
indent_style=space
indent_size=2
max_line_lenght=119

[{.babelrc,.stylelintrc,.eslintrc,jest.config,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=space
indent_size=2

[*.css]
indent_style=space
indent_size=2

[*.csv]
indent_style=tab
tab_width=1

[{*.applejs,*.js}]
indent_style=space
indent_size=2

[{*.ddl,*.sql}]
indent_style=space
indent_size=2

[*.less]
indent_style=space
indent_size=2

[*.sass]
indent_style=space
indent_size=2

[{*.yaml,*.yml}]
indent_style=space
indent_size=2
